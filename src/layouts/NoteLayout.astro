---
import Layout from "./Layout.astro";
import NoteHistory from "../components/History/NoteHistory.astro";
import TableOfContents from "../components/Navigation/TableOfContents.astro";
import Backlinks from "../components/Backlinks.astro";
import ImageLightbox from "../components/ImageLightbox.astro";
import SiteFooter from "../components/SiteFooter.astro";
import { getReadingTime } from "../lib/reading-time";
import BackToGarden from "../components/Navigation/BackToGarden.astro";
import AboutAuthor from "../components/AboutAuthor.astro";

interface Props {
    frontmatter: {
        title: string;
        publishedDate?: Date;
        stage: "seed" | "sprout" | "evergreen";
        summary?: string;
        tags: string[];
        draft?: boolean;
        featuredImage?: any;
        featuredImageAlt?: string;
        featured?: boolean;
        cover?: any;
    };
    filePath: string;
    gitCreated?: Date | null;
    gitUpdated?: Date | null;
    backlinkedNotes: any[];
    noteBody?: string;
    headings?: any[];
}

const { frontmatter, filePath, gitCreated, gitUpdated, backlinkedNotes, noteBody, headings } =
    Astro.props;

// Use passed body or fallback (fallback shouldn't be needed if updated correctly)
const readingTime = noteBody ? getReadingTime(noteBody) : "";

const createdDate = frontmatter.publishedDate || gitCreated || new Date();
const hasBeenUpdated =
    gitUpdated && gitUpdated.getTime() > createdDate.getTime() + 1000 * 60 * 60; // More than 1 hour difference

const isNoteDraft = frontmatter.draft === true;

const formatDate = (date: Date) => {
    return date.toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
    });
};

const getStageColorClass = (stage: string) => {
    switch(stage) {
        case 'seed': return 'bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400';
        case 'sprout': return 'bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400';
        case 'evergreen': return 'bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-400';
        default: return 'bg-slate-100 dark:bg-slate-800 text-slate-500';
    }
}

const getStageDotClass = (stage: string) => {
     switch(stage) {
        case 'seed': return 'bg-emerald-500';
        case 'sprout': return 'bg-blue-500';
        case 'evergreen': return 'bg-emerald-500';
        default: return 'bg-slate-400';
    }
}
---

<Layout
    title={frontmatter.title}
    description={frontmatter.summary}
    image={frontmatter.featuredImage?.src || frontmatter.cover?.src}
    type="article"
    publishedTime={createdDate.toISOString()}
    modifiedTime={hasBeenUpdated ? gitUpdated!.toISOString() : undefined}
    tags={frontmatter.tags}
>
    <main class="max-w-7xl mx-auto px-4 py-8 lg:grid lg:grid-cols-12 lg:gap-12 items-start">
        <!-- Left Sidebar (Col 1-2) -->
        <aside class="hidden lg:block lg:col-span-2 sticky top-24 h-[calc(100vh-6rem)] overflow-y-auto pr-4 no-scrollbar">
            <div class="space-y-8">
                <div>
                    <BackToGarden class="mb-8" />

                    <h4 class="text-xs font-bold text-slate-400 dark:text-slate-500 uppercase tracking-widest mb-4">
                        {frontmatter.title}
                    </h4>

                    <TableOfContents
                        content={noteBody || ""}
                        title={frontmatter.title}
                        headings={headings}
                        minHeadings={2}
                    />
                </div>
            </div>
        </aside>

        <!-- Main Content (Col 3-9) -->
        <article
            class={`lg:col-span-7 bg-white dark:bg-navy-800 rounded-2xl shadow-sm border border-slate-200 dark:border-slate-800 overflow-hidden ${isNoteDraft ? "note-is-draft relative" : ""}`}
            data-pagefind-body
        >
            <div class="px-8 pt-10 pb-6 border-b border-slate-100 dark:border-slate-800">
                <div 
                    class={`inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full ${getStageColorClass(frontmatter.stage)} text-[10px] font-bold uppercase tracking-wider mb-6`}
                    data-pagefind-filter="stage"
                    data-pagefind-meta={`stage:${frontmatter.stage}`}
                >
                    <span class={`w-2 h-2 rounded-full ${getStageDotClass(frontmatter.stage)}`}></span>
                    {frontmatter.stage}
                </div>

                <h1 class="text-4xl md:text-5xl font-extrabold text-black dark:text-white leading-tight mb-6">
                    {frontmatter.title}
                </h1>

                <div class="flex flex-wrap items-center gap-x-6 gap-y-3 text-sm text-slate-500 dark:text-slate-400">
                    <div class="flex items-center gap-1.5">
                        <span class="material-symbols-outlined text-base">calendar_today</span>
                        Published: <span class="font-medium text-slate-700 dark:text-slate-300">{formatDate(createdDate)}</span>
                    </div>
                    {readingTime && (
                        <div class="flex items-center gap-1.5">
                            <span class="material-symbols-outlined text-base">schedule</span>
                            Read Time: <span class="font-medium text-slate-700 dark:text-slate-300">{readingTime}</span>
                        </div>
                    )}
                    <div class="flex items-center gap-2">
                        {frontmatter.tags.map(tag => (
                            <a 
                                href={`/topics/${tag}`} 
                                class="bg-slate-100 dark:bg-slate-800 px-2 py-0.5 rounded text-xs font-mono hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors"
                            >
                                #{tag}
                            </a>
                        ))}
                    </div>
                </div>
            </div>

            <div class="p-8 prose prose-slate dark:prose-invert prose-lg max-w-none font-serif leading-relaxed">
                <slot />

                {backlinkedNotes.length > 0 && (
                    <div class="mt-16 pt-8 border-t border-slate-100 dark:border-slate-800">
                        <Backlinks backlinkedNotes={backlinkedNotes} />
                    </div>
                )}
            </div>

            <footer class="bg-slate-50 dark:bg-navy-900/80 p-8 border-t border-slate-100 dark:border-slate-800">
                <div class="flex items-center gap-2 text-xs font-bold text-slate-400 uppercase tracking-widest mb-6">
                    <span class="w-1.5 h-1.5 rounded-full bg-blue-500"></span>
                    Changelog
                </div>
                {/* Brief history summary for footer */}
                <NoteHistory filePath={filePath} />
            </footer>
        </article>

        <!-- Right Sidebar (Col 10-12) -->
        <aside class="hidden lg:block lg:col-span-3 space-y-8 sticky top-24">
            <AboutAuthor />
        </aside>
    </main>

    <footer class="max-w-7xl mx-auto px-4 py-12 border-t border-slate-200 dark:border-slate-800 mt-12 text-center text-sm text-slate-500">
        <div class="flex flex-col items-center gap-4">
            <p>Â© 2026 Malcolm Bastien</p>
        </div>
    </footer>

    <ImageLightbox />

    <style is:global>
      @reference "../styles/global.css";

      .prose blockquote {
          border-left-color: var(--color-primary);
          font-style: italic;
      }
      .prose h2, .prose h3 {
          font-family: 'Inter', sans-serif;
          @apply text-navy-900 dark:text-slate-100 font-bold tracking-tight;
      }
      .prose h2 { @apply text-3xl mt-12 mb-6; }
      .prose h3 { @apply text-xl mt-8 mb-4; }

      /* Note Styles */
      .note-is-draft::after {
        content: "DRAFT_NODE";
        @apply absolute top-4 right-4 bg-blue-500 text-white text-xs font-mono font-bold px-3 py-1 z-50;
      }
    </style>
</Layout>
