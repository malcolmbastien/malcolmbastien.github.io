---
import Layout from "./Layout.astro";
import TableOfContents from "../components/Navigation/TableOfContents.astro";
import AboutAuthor from "../components/AboutAuthor.astro";
import Backlinks from "../components/Backlinks.astro";
import ImageLightbox from "../components/ImageLightbox.astro";
import SiteFooter from "../components/SiteFooter.astro";
import { getReadingTime } from "../lib/reading-time";
import BackToGarden from "../components/Navigation/BackToGarden.astro";
import { getStageData } from "../lib/theme";
import TopicBadge from "../components/TopicBadge.astro";

interface Props {
    frontmatter: {
        title: string;
        publishedDate?: Date;
        stage: "seed" | "sprout" | "evergreen";
        summary?: string;
        tags: string[];
        draft?: boolean;
        featuredImage?: any;
        featuredImageAlt?: string;
        featured?: boolean;
        cover?: any;
    };
    backlinkedNotes: any[];
    noteBody?: string;
    headings?: any[];
}

const { frontmatter, backlinkedNotes, noteBody, headings } =
    Astro.props;

const readingTime = noteBody ? getReadingTime(noteBody) : "";
const stageData = getStageData(frontmatter.stage);

const createdDate = frontmatter.publishedDate || new Date();

const isNoteDraft = frontmatter.draft === true;

const formatDate = (date: Date) => {
    return date.toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
        timeZone: "UTC",
    });
};

// Helper for stage badge styling
const getStageBadgeClass = (stage: string) => {
    const stageData = getStageData(stage);
    return stageData.colors.badge;
};
---

<Layout
    title={frontmatter.title}
    description={frontmatter.summary}
    image={frontmatter.featuredImage?.src || frontmatter.cover?.src}
    type="article"
    publishedTime={createdDate.toISOString()}
    tags={frontmatter.tags}
>
    <main class="max-w-7xl mx-auto px-6 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
            <!-- Left Sidebar - Context/Navigation -->
            <aside class="hidden lg:block lg:col-span-3 sticky top-24 h-fit pr-4 border-r border-slate-100 dark:border-slate-800 min-w-0">
                <div class="space-y-8">
                    <TableOfContents
                        content={noteBody || ""}
                        title={frontmatter.title}
                        headings={headings}
                        minHeadings={2}
                    />
                    <AboutAuthor />
                    <BackToGarden class="mt-8" />
                </div>
            </aside>

            <!-- Main Content -->
            <article
                class={`lg:col-span-9 max-w-3xl ${isNoteDraft ? "note-is-draft relative" : ""}`}
                data-pagefind-body
            >
                <!-- Draft Banner -->
                {isNoteDraft && (
                    <div class="draft-banner mb-6 px-4 py-3 border-l-4 border-dashed border-slate-400 dark:border-slate-500 bg-slate-50 dark:bg-slate-800/50 rounded-r">
                        <div class="flex items-center gap-2 text-slate-600 dark:text-slate-400">
                            <span class="material-symbols-outlined text-sm">edit_note</span>
                            <span class="text-sm font-medium">Draft Post â€” This content is a work in progress</span>
                        </div>
                    </div>
                )}

                <!-- Article Header -->
                <header class="mb-12 pb-8 border-b border-slate-100 dark:border-slate-800">
                    <!-- Metadata line -->
                    <div class="flex flex-wrap items-center gap-3 mb-6" data-pagefind-filter="stage" data-pagefind-meta={`stage:${frontmatter.stage}`}>
                        <span class={`text-[10px] font-bold px-2 py-0.5 rounded uppercase tracking-wider ${getStageBadgeClass(frontmatter.stage)}`}>
                            {frontmatter.stage}
                        </span>
                        <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                            {formatDate(createdDate)}
                        </span>

                        {readingTime && (
                            <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">
                                {readingTime}
                            </span>
                        )}
                    </div>

                    <!-- Title -->
                    <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white leading-tight mb-6">
                        {frontmatter.title}
                    </h1>

                    <!-- Summary -->
                    {frontmatter.summary && (
                        <p class="text-xl text-slate-600 dark:text-slate-400 leading-relaxed italic">
                            {frontmatter.summary}
                        </p>
                    )}

                    <!-- Tags -->
                    {frontmatter.tags.length > 0 && (
                        <div class="flex flex-wrap gap-2 mt-6">
                            {frontmatter.tags.map(tag => (
                                <TopicBadge topic={tag} size="sm" />
                            ))}
                        </div>
                    )}
                </header>

                <!-- Article Body -->
                <div class="prose prose-slate dark:prose-invert prose-lg max-w-none font-sans leading-relaxed">
                    <slot />

                    {backlinkedNotes.length > 0 && (
                        <div class="backlinks mt-16 pt-8 border-t border-slate-100 dark:border-slate-800">
                            <Backlinks backlinkedNotes={backlinkedNotes} />
                        </div>
                    )}
                </div>


            </article>
        </div>
    </main>

    <SiteFooter />

    <ImageLightbox />

    <style is:global>
        @reference "../styles/global.css";

        /* Backlinks section */
        .prose .backlinks a {
            text-decoration: none !important;
            color: inherit !important;
            font-weight: inherit !important;
            font-family: inherit !important;
        }

        .prose .backlinks h4 {
            color: #0f172a !important;
        }
        .dark .prose .backlinks h4 {
            color: #f1f5f9 !important;
        }
        .prose .backlinks article:hover h4 {
            color: #1e3a8a !important;
        }
        .dark .prose .backlinks article:hover h4 {
            color: #60a5fa !important;
        }

        .prose blockquote {
            border-left-color: var(--color-primary);
            font-style: italic;
            font-family: var(--font-serif);
        }

        /* Callout base styles - production-safe with !important */
        .prose .callout-block {
            margin: 1.5rem 0 !important;
            padding: 1rem 1.25rem !important;
            border-radius: 0 0.5rem 0.5rem 0 !important;
            border-left-width: 3px !important;
            border-left-style: solid !important;
        }

        .prose .callout-block[data-callout-type="note"] { background-color: #f8fafc !important; border-left-color: #64748b !important; }
        .prose .callout-block[data-callout-type="tip"] { background-color: #fffbeb !important; border-left-color: #f59e0b !important; }
        .prose .callout-block[data-callout-type="important"] { background-color: #fffbeb !important; border-left-color: #f59e0b !important; }
        .prose .callout-block[data-callout-type="warning"] { background-color: #fffbeb !important; border-left-color: #f59e0b !important; }
        .prose .callout-block[data-callout-type="error"] { background-color: #fef2f2 !important; border-left-color: #ef4444 !important; }
        .prose .callout-block[data-callout-type="danger"] { background-color: #fef2f2 !important; border-left-color: #ef4444 !important; }
        .prose .callout-block[data-callout-type="info"] { background-color: #eff6ff !important; border-left-color: #3b82f6 !important; }
        .prose .callout-block[data-callout-type="todo"] { background-color: #eff6ff !important; border-left-color: #3b82f6 !important; }
        .prose .callout-block[data-callout-type="success"] { background-color: #f0fdf4 !important; border-left-color: #22c55e !important; }
        .prose .callout-block[data-callout-type="abstract"] { background-color: #f0fdf4 !important; border-left-color: #22c55e !important; }
        .prose .callout-block[data-callout-type="example"] { background-color: #faf5ff !important; border-left-color: #a855f7 !important; }
        .prose .callout-block[data-callout-type="quote"] { background-color: #f8fafc !important; border-left-color: #64748b !important; }
        .prose .callout-block[data-callout-type="question"] { background-color: #faf5ff !important; border-left-color: #a855f7 !important; }
        .prose .callout-block[data-callout-type="failure"] { background-color: #fef2f2 !important; border-left-color: #ef4444 !important; }
        .prose .callout-block[data-callout-type="bug"] { background-color: #fef2f2 !important; border-left-color: #ef4444 !important; }
        .prose .callout-block[data-callout-type="idea"] { background-color: #fffbeb !important; border-left-color: #f59e0b !important; }
        .prose .callout-block[data-callout-type="draft"] { background-color: #f8fafc !important; border-left-color: #64748b !important; border-left-style: dashed !important; }
        .prose .callout-block[data-callout-type="wip"] { background-color: #f8fafc !important; border-left-color: #64748b !important; border-left-style: dashed !important; }

        /* Dark mode callout overrides */
        .dark .prose .callout-block[data-callout-type="note"] { background-color: #1e293b !important; border-left-color: #94a3b8 !important; }
        .dark .prose .callout-block[data-callout-type="tip"] { background-color: #451a03 !important; border-left-color: #f59e0b !important; }
        .dark .prose .callout-block[data-callout-type="important"] { background-color: #451a03 !important; border-left-color: #f59e0b !important; }
        .dark .prose .callout-block[data-callout-type="warning"] { background-color: #451a03 !important; border-left-color: #f59e0b !important; }
        .dark .prose .callout-block[data-callout-type="error"] { background-color: #450a0a !important; border-left-color: #ef4444 !important; }
        .dark .prose .callout-block[data-callout-type="danger"] { background-color: #450a0a !important; border-left-color: #ef4444 !important; }
        .dark .prose .callout-block[data-callout-type="info"] { background-color: #172554 !important; border-left-color: #3b82f6 !important; }
        .dark .prose .callout-block[data-callout-type="todo"] { background-color: #172554 !important; border-left-color: #3b82f6 !important; }
        .dark .prose .callout-block[data-callout-type="success"] { background-color: #052e16 !important; border-left-color: #22c55e !important; }
        .dark .prose .callout-block[data-callout-type="abstract"] { background-color: #052e16 !important; border-left-color: #22c55e !important; }
        .dark .prose .callout-block[data-callout-type="example"] { background-color: #3b0764 !important; border-left-color: #a855f7 !important; }
        .dark .prose .callout-block[data-callout-type="quote"] { background-color: #1e293b !important; border-left-color: #94a3b8 !important; }
        .dark .prose .callout-block[data-callout-type="question"] { background-color: #3b0764 !important; border-left-color: #a855f7 !important; }
        .dark .prose .callout-block[data-callout-type="failure"] { background-color: #450a0a !important; border-left-color: #ef4444 !important; }
        .dark .prose .callout-block[data-callout-type="bug"] { background-color: #450a0a !important; border-left-color: #ef4444 !important; }
        .dark .prose .callout-block[data-callout-type="idea"] { background-color: #451a03 !important; border-left-color: #f59e0b !important; }
        .dark .prose .callout-block[data-callout-type="draft"] { background-color: #1e293b !important; border-left-color: #94a3b8 !important; border-left-style: dashed !important; }
        .dark .prose .callout-block[data-callout-type="wip"] { background-color: #1e293b !important; border-left-color: #94a3b8 !important; border-left-style: dashed !important; }

        /* Dark mode internal text colors */
        .dark .prose .callout-block .callout-body p {
            color: #d1d5db !important;
        }

        .dark .prose .callout-block[data-callout-type="note"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="draft"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="wip"] .callout-header span { color: #94a3b8 !important; }
        .dark .prose .callout-block[data-callout-type="tip"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="important"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="idea"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="warning"] .callout-header span { color: #fbbf24 !important; }
        .dark .prose .callout-block[data-callout-type="error"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="failure"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="bug"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="danger"] .callout-header span { color: #f87171 !important; }
        .dark .prose .callout-block[data-callout-type="info"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="todo"] .callout-header span { color: #60a5fa !important; }
        .dark .prose .callout-block[data-callout-type="success"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="abstract"] .callout-header span { color: #4ade80 !important; }
        .dark .prose .callout-block[data-callout-type="example"] .callout-header span,
        .dark .prose .callout-block[data-callout-type="question"] .callout-header span { color: #c084fc !important; }
        .dark .prose .callout-block[data-callout-type="quote"] .callout-header span { color: #94a3b8 !important; }

        .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
            font-family: "Inter", system-ui, sans-serif;
            @apply text-slate-900 dark:text-slate-100 font-bold tracking-tight scroll-mt-24;
        }

        .prose h2 { @apply text-2xl mt-12 mb-6; }
        .prose h3 { @apply text-xl mt-8 mb-4; }

        /* Internal Links */
        .prose a.internal-link {
            display: inline !important;
            transition: all 0.2s ease-in-out !important;
            @apply font-medium text-slate-900 dark:text-slate-100;
            background: transparent !important;
            padding: 0 !important;
            border: none !important;
            text-decoration: none !important;
        }

        .prose a.internal-link .link-text {
            text-decoration: underline !important;
            text-decoration-thickness: 3px !important;
            text-underline-offset: 4px !important;
            transition: all 0.2s ease-in-out !important;
            display: inline !important;
        }

        .prose a.internal-link[data-stage="seed"] .link-text { text-decoration-color: var(--stage-seed-underline) !important; }
        .prose a.internal-link[data-stage="sprout"] .link-text { text-decoration-color: var(--stage-sprout-underline) !important; }
        .prose a.internal-link[data-stage="evergreen"] .link-text { text-decoration-color: var(--stage-evergreen-underline) !important; }

        .prose a.internal-link:hover .link-text {
            text-decoration-thickness: 6px !important;
        }

        /* External Links */
        .prose a.external-link {
            @apply font-semibold text-purple-600 hover:opacity-80 transition-opacity;
            display: inline !important;
            text-decoration: none !important;
        }

        .prose a.external-link .link-text {
            text-decoration: underline !important;
            text-decoration-color: #a855f7 !important;
            text-decoration-thickness: 3px !important;
            text-underline-offset: 4px !important;
            transition: all 0.2s ease-in-out !important;
        }

        .prose a.external-link:hover .link-text {
            text-decoration-thickness: 6px !important;
        }

        .prose a.external-link::after {
            content: "north_east" !important;
            font-family: 'Material Symbols Outlined' !important;
            font-size: 16px !important;
            line-height: 1 !important;
            margin-left: 0.1rem !important;
            opacity: 1 !important;
            display: inline-block !important;
            text-decoration: none !important;
            vertical-align: middle !important;
        }

        /* Inline Topic Links */
        .prose a.inline-tag {
            @apply inline-flex items-center gap-1 text-sm font-medium text-slate-600 dark:text-slate-300 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded px-3 py-1.5 mx-0.5 transition-colors;
            text-decoration: none !important;
        }

        .prose a.inline-tag:hover {
            @apply border-primary text-primary dark:text-blue-400;
        }

        /* Draft Container - :::draft directive */
        .prose .draft-container {
            margin: 1.5rem 0 !important;
            padding: 1rem 1.25rem !important;
            border-radius: 0 0.5rem 0.5rem 0 !important;
            border-left: 3px dashed #94a3b8 !important;
            background-color: #f8fafc !important;
            position: relative !important;
        }

        .prose .draft-container::before {
            content: "DRAFT" !important;
            position: absolute !important;
            top: -0.75rem !important;
            right: 1rem !important;
            font-size: 10px !important;
            font-weight: 700 !important;
            text-transform: uppercase !important;
            letter-spacing: 0.1em !important;
            color: #64748b !important;
            background-color: #f8fafc !important;
            padding: 0 0.5rem !important;
        }

        .dark .prose .draft-container {
            background-color: #1e293b !important;
            border-left-color: #64748b !important;
        }

        .dark .prose .draft-container::before {
            color: #94a3b8 !important;
            background-color: #1e293b !important;
        }

        .prose .draft-container * {
            opacity: 0.85 !important;
        }

        .prose .draft-container p:last-child {
            margin-bottom: 0 !important;
        }

        /* Reduce vertical spacing between list items */
        .prose li {
            margin-top: 0.25rem;
            margin-bottom: 0.25rem;
        }

        .prose li > p {
            margin-top: 0.25rem;
            margin-bottom: 0.25rem;
        }
    </style>
</Layout>
