---
import { stages } from "../../lib/theme";

interface Props {
    counts: {
        all: number;
        seed: number;
        sprout: number;
        evergreen: number;
    };
}

const { counts } = Astro.props;
---

<div class="bg-slate-50 dark:bg-slate-900/50 p-6 rounded-2xl border border-slate-100 dark:border-slate-800">
    <h4 class="text-base font-semibold text-slate-700 mb-6">Note Types</h4>
    
    <div class="space-y-6">
        <div>
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Seed</span>
                <span class="text-xs font-mono text-slate-500">{counts.seed.toString().padStart(3, '0')}</span>
            </div>
            <div class="h-1 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
                <div class="h-full bg-amber-400 w-4/5 rounded-full"></div>
            </div>
            <p class="text-xs text-slate-500 mt-2 leading-relaxed">Rough ideas and early drafts</p>
        </div>
        
        <div>
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Sprout</span>
                <span class="text-xs font-mono text-slate-500">{counts.sprout.toString().padStart(3, '0')}</span>
            </div>
            <div class="h-1 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
                <div class="h-full bg-emerald-400 w-1/3 rounded-full"></div>
            </div>
            <p class="text-xs text-slate-500 mt-2 leading-relaxed">Developing concepts</p>
        </div>
        
        <div>
            <div class="flex items-center justify-between mb-2">
                <span class="text-sm font-semibold text-slate-700 dark:text-slate-300">Evergreen</span>
                <span class="text-xs font-mono text-slate-500">{counts.evergreen.toString().padStart(3, '0')}</span>
            </div>
            <div class="h-1 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
                <div class="h-full bg-emerald-600 w-2/5 rounded-full"></div>
            </div>
            <p class="text-xs text-slate-500 mt-2 leading-relaxed">Polished, reliable notes</p>
        </div>
    </div>
</div>
