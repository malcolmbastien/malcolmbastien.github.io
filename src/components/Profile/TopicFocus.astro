---
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');

// Aggregate tag counts
const tagCounts: Record<string, number> = {};
allPosts.forEach(post => {
	post.data.tags.forEach(tag => {
		tagCounts[tag] = (tagCounts[tag] || 0) + 1;
	});
});

// Get top 8 tags
const topTags = Object.entries(tagCounts)
	.sort(([,a], [,b]) => b - a)
	.slice(0, 8);
---

<div class="bg-white dark:bg-[#121812] border border-slate-200 dark:border-slate-800 rounded-xl p-4">
	<h3 class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">Topic Focus</h3>
	<div class="grid grid-cols-5 gap-1.5">
		{topTags.map(([tag, count]) => (
			<div class="flex items-center justify-between bg-slate-50 dark:bg-slate-800 rounded-lg px-2.5 py-1.5">
				<span class="text-xs font-medium text-slate-700 dark:text-slate-300 capitalize">#{tag}</span>
				<span class="text-xs font-bold text-slate-500 dark:text-slate-500">{count}</span>
			</div>
		))}
	</div>
</div>
