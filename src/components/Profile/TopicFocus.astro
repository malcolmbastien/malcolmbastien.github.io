---
import { getCollection } from "astro:content";

const allNotes = await getCollection("notes");

// Aggregate topic counts
const topicCounts: Record<string, number> = {};
allNotes.forEach((note) => {
    note.data.tags.forEach((tag: string) => {
        topicCounts[tag] = (topicCounts[tag] || 0) + 1;
    });
});

// Get top 16 topics by count
const topTopics = Object.entries(topicCounts)
    .sort(([, a], [, b]) => b - a)
    .slice(0, 16);
---

<div class="surface-elevation p-6">
    <h3 class="text-xs font-sans font-bold tracking-widest uppercase text-secondary mb-6">Topics</h3>
    <div
        class="flex flex-wrap gap-x-4 gap-y-3"
    >
        {
            topTopics.map(([topic, count]) => (
                <a
                    href={`/topics/${topic}`}
                    class="group flex items-baseline gap-2"
                >
                    <span class="text-sm font-sans font-bold text-primary group-hover:text-blueprint-blue transition-colors">#{topic}</span>
                    <span class="text-xs font-sans text-secondary group-hover:text-blueprint-blue transition-colors">{count}</span>
                </a>
            ))
        }
    </div>
    <div class="mt-8 pt-6 border-t border-slate-50 dark:border-slate-700">
        <a
            href="/topics"
            class="text-sm font-medium tracking-wide text-blueprint-blue hover:opacity-70 dark:hover:text-white transition-opacity"
        >
            Explore All Topics â†’
        </a>
    </div>
</div>
