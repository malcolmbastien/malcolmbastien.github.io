---
interface Props {
    class?: string;
}

const { class: className = "" } = Astro.props;
---

<div class={`bg-white dark:bg-slate-800 p-6 rounded-xl border border-slate-200 dark:border-slate-700 shadow-sm ${className}`}>
    <h3 class="text-xs font-bold uppercase tracking-[0.2em] text-slate-400 mb-6">Social Links</h3>
    <ul class="space-y-4">
        <li>
            <a 
                href="https://github.com/malcolmbastien" 
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 text-sm text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors group"
            >
                <span class="material-symbols-outlined text-lg">code</span>
                <span>GitHub</span>
            </a>
        </li>
        <li>
            <a 
                href="https://www.instagram.com/malcolmbastien/" 
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 text-sm text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors group"
            >
                <span class="material-symbols-outlined text-lg">photo_camera</span>
                <span>Instagram</span>
            </a>
        </li>
        <li>
            <a 
                href="https://www.linkedin.com/in/malcolmbastien/" 
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 text-sm text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors group"
            >
                <span class="material-symbols-outlined text-lg">work</span>
                <span>LinkedIn</span>
            </a>
        </li>
        <li>
            <a 
                href="https://mastodon.social/@malcolm" 
                target="_blank"
                rel="noopener noreferrer me"
                class="flex items-center gap-3 text-sm text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors group"
            >
                <span class="material-symbols-outlined text-lg">alternate_email</span>
                <span>Mastodon</span>
            </a>
        </li>
        <li>
            <a 
                href="https://matrix.to/#/@malcolmbastien:matrix.org" 
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-3 text-sm text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors group"
            >
                <span class="material-symbols-outlined text-lg">chat</span>
                <span>Matrix</span>
            </a>
        </li>
    </ul>
</div>
