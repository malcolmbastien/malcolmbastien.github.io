---
import { Picture } from "astro:assets";
import malcolmHeadshot from "/src/assets/malcolm_headshot.png";
---

<div class="mb-12 pb-8 border-b border-slate-200 dark:border-slate-800">
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_auto] gap-8 lg:gap-12">
        <!-- Left column: Title and tagline -->
        <div class="flex flex-col gap-4">
            <h1 class="text-7xl md:text-8xl font-black leading-[0.85] tracking-tight">
                <span class="text-slate-900 dark:text-white">Flow</span>
                <span class="text-primary">Focused</span><span class="text-primary">.</span>
            </h1>
            <p class="text-xl md:text-2xl font-normal text-slate-600 dark:text-slate-400 max-w-2xl leading-relaxed">
                Field notes on <span class="text-primary italic font-medium">teams</span>, <span class="text-primary italic font-medium">flow</span> and <span class="text-primary italic font-medium">business agility</span>.
            </p>
        </div>

        <!-- Right column: Profile card -->
        <div class="flex flex-col gap-4 lg:pl-8 lg:border-l border-slate-200 dark:border-slate-800">
            <!-- Photo with status indicator -->
            <div class="relative shrink-0">
                <a href="/about">
                    <Picture
                        src={malcolmHeadshot}
                        alt="Malcolm Bastien"
                        class="w-20 h-20 rounded-xl border-2 border-white dark:border-slate-800 shadow-md object-cover hover:scale-105 transition-transform"
                    />
                </a>
            </div>

            <!-- Name and role -->
            <div class="flex flex-col">
                <a href="/about" class="text-xl font-semibold text-slate-900 dark:text-white hover:text-primary dark:hover:text-blue-400 transition-colors">
                    Malcolm Bastien
                </a>
                <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-widest mt-1">
                    Lean delivery & organisational change
                </p>
            </div>

            <!-- Social links -->
            <div class="flex gap-2 mt-2">
                <a
                    href="https://github.com/malcolmbastien"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-9 h-9 flex items-center justify-center rounded-full bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors"
