---
import { Picture } from "astro:assets";
import malcolmHeadshot from "/src/assets/malcolm_headshot.png";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<!-- About the Author -->
<a href="/about" class="block cursor-pointer group">
<div class={`card-interactive p-6 hover:bg-slate-50 dark:hover:bg-slate-700 ${className || ''}`}>
    <h3 class="text-xs font-sans font-bold text-secondary mb-6 tracking-widest uppercase group-hover:text-blueprint-blue transition-colors">About the Author</h3>
<div class="flex items-center gap-4">
    <Picture src={malcolmHeadshot} alt="Malcolm Bastien" class="w-12 h-12 rounded-full object-cover" />
    <div>
        <div class="font-bold text-primary">Malcolm Bastien</div>
        <div class="text-sm text-secondary">Lean-Agile Practitioner</div>
    </div>
</div>
    </div>
</a>