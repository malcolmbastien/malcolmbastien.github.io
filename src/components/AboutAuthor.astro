---
import { Picture } from "astro:assets";
import malcolmHeadshot from "/src/assets/malcolm_headshot.png";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<!-- About the Author -->
<a href="/about" class="block">
<div class={`card-blueprint p-6 bg-white dark:bg-slate-800 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors ${className || ''}`}>
    <h3 class="text-xs font-sans font-bold text-slate-500 dark:text-slate-400 mb-6 tracking-widest uppercase">About the Author</h3>
<div class="flex items-center gap-4">
    <Picture src={malcolmHeadshot} alt="Malcolm Bastien" class="w-12 h-12 rounded-full object-cover" />
    <div>
        <div class="font-bold text-terminal-dark dark:text-white">Malcolm Bastien</div>
        <div class="text-sm text-slate-500 dark:text-slate-400">Lean-Agile Practitioner</div>
    </div>
</div>
    </div>
</a>