---
import { Picture } from "astro:assets";
import malcolmHeadshot from "/src/assets/malcolm_headshot.png";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<a href="/about" class={`block pb-6 border-b border-slate-100 dark:border-slate-800 group ${className || ''}`}>
    <h3 class="small-caps text-[11px] font-bold tracking-widest text-slate-500 mb-4">About the Author</h3>
    <div class="flex items-center gap-3">
        <Picture src={malcolmHeadshot} alt="Malcolm Bastien" class="w-10 h-10 rounded-full object-cover" />
        <div>
            <p class="font-semibold text-sm text-slate-900 dark:text-white group-hover:text-primary transition-colors">
                Malcolm Bastien
            </p>
            <p class="text-xs text-slate-500 dark:text-slate-400">Lean-Agile Delivery</p>
        </div>
    </div>
</a>
