---
import Layout from "../layouts/Layout.astro";
import SearchComponent from "../components/Navigation/Search.astro";
import BackToGarden from "../components/Navigation/BackToGarden.astro";
import ProfileHeader from "../components/Profile/ProfileHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
---

<Layout
    title="Search - Sprout Digital Garden"
    description="Search through the thoughts, seeds, and sprouts of my digital garden."
>
    <Fragment slot="head">
        {import.meta.env.PROD && (
            <>
                <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
                <script src="/pagefind/pagefind-ui.js" is:inline></script>
            </>
        )}
    </Fragment>
    <main class="max-w-7xl mx-auto p-4 md:p-8 min-h-screen" data-pagefind-ignore>
        <div class="mb-12">
            <BackToGarden class="mb-8" />

            <div class="card-blueprint p-8 md:p-16 bg-white shadow-[8px_8px_0_0_#f1f5f9]">
                <h2 class="text-5xl font-serif font-black text-terminal-dark dark:text-white mb-12 tracking-tighter uppercase leading-none">
                    Search
                </h2>
                <SearchComponent />
            </div>
        </div>

        <SiteFooter />
    </main>
</Layout>
