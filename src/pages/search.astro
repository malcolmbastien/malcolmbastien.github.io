---
import Layout from "../layouts/Layout.astro";
import SearchComponent from "../components/Navigation/Search.astro";
import ProfileHeader from "../components/Profile/ProfileHeader.astro";
import SiteFooter from "../components/SiteFooter.astro";
---

<Layout
    title="Search - Sprout Digital Garden"
    description="Search through the thoughts, seeds, and sprouts of my digital garden."
>
    <main class="max-w-4xl mx-auto p-4 md:p-8 min-h-screen">
        <ProfileHeader />

        <div class="mb-12">
            <a
                href="/"
                class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 dark:text-slate-400 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors mb-8"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                >
                    <path
                        fill-rule="evenodd"
                        d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                        clip-rule="evenodd"></path>
                </svg>
                Back to Garden
            </a>

            <div class="bg-white dark:bg-[#121812] border border-slate-200 dark:border-slate-800 rounded-3xl shadow-sm p-6 md:p-10">
                <h2 class="text-2xl font-bold text-slate-900 dark:text-white mb-8">Search the Garden</h2>
                <SearchComponent />
            </div>
        </div>

        <SiteFooter />
    </main>
</Layout>
