---
import Layout from "../layouts/Layout.astro";
import SearchComponent from "../components/Navigation/Search.astro";
import SiteFooter from "../components/SiteFooter.astro";
---

<Layout
    title="Search | Digital Garden"
    description="Search through the thoughts, seeds, and sprouts of my digital garden."
>
    <Fragment slot="head">
        {import.meta.env.PROD && (
            <>
                <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
                <script src="/pagefind/pagefind-ui.js" is:inline></script>
            </>
        )}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet"/>
        <style is:inline>
            .search-highlight {
                background-color: #dcfce7;
                padding: 0 2px;
                border-radius: 2px;
            }
            .dark .search-highlight {
                background-color: #166534;
                color: #f0fdf4;
            }
            /* Pagefind uses mark tags for highlighting */
            mark {
                background-color: #dcfce7;
                color: inherit;
                padding: 0 2px;
                border-radius: 2px;
            }
            .dark mark {
                background-color: #166534;
                color: #f0fdf4;
            }
        </style>
    </Fragment>
    
    <main class="max-w-4xl mx-auto px-6 py-12 min-h-screen" data-pagefind-ignore>
        <div class="space-y-12">
            <header>
                <h1 class="text-4xl font-bold tracking-tight text-navy-900 dark:text-white uppercase mb-8">
                    Search
                </h1>
            </header>
            
            <SearchComponent />
        </div>

        <SiteFooter />
    </main>
</Layout>
