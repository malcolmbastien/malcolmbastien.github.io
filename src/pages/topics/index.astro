---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import BackToGarden from "../../components/Navigation/BackToGarden.astro";
import SiteFooter from "../../components/SiteFooter.astro";

const allNotes = await getCollection("notes");

const topicCounts: Record<string, number> = {};
allNotes.forEach((note) => {
    note.data.tags.forEach((topic: string) => {
        topicCounts[topic] = (topicCounts[topic] || 0) + 1;
    });
});

const sortedTopics = Object.entries(topicCounts).sort((a, b) => a[0].localeCompare(b[0]));

const groupedTopics = sortedTopics.reduce((acc, [topic, count]) => {
    const firstLetter = topic[0].toUpperCase();
    if (!acc[firstLetter]) {
        acc[firstLetter] = [];
    }
    acc[firstLetter].push([topic, count]);
    return acc;
}, {} as Record<string, typeof sortedTopics>);

const alphabet = Object.keys(groupedTopics).sort();
---

<Layout
    title="All Topics - Sprout"
    description="Browse all topics in the digital garden"
    type="website"
>
    <main class="max-w-(--breakpoint-2xl) mx-auto p-4 md:p-8" data-pagefind-ignore>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-10">
            <div class="lg:col-span-3">
                <div class="lg:sticky lg:top-24">
                    <BackToGarden />
                </div>
            </div>

        <div class="lg:col-span-9 max-w-5xl">
            <header class="mb-16">
                <h1 class="text-6xl font-serif font-black text-terminal-dark dark:text-white tracking-tighter mb-6">
                    Topic Index
                </h1>
            </header>

            <div class="space-y-20">
                {alphabet.map((letter) => (
                    <div class="space-y-8">
                        <div class="flex items-center gap-6">
                            <h2 class="text-3xl font-bold text-blueprint-blue tracking-[0.2em]">
                                {letter}
                            </h2>
                            <div class="flex-1 h-[1px] bg-slate-100 dark:bg-slate-800"></div>
                        </div>
                        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
                            {groupedTopics[letter].map(([topic, count]) => (
                                <a
                                    href={`/topics/${topic}`}
                                    class="group flex flex-col gap-2 transition-all"
                                >
                                    <div class="flex items-baseline justify-between">
                                        <span class="text-base font-bold text-terminal-dark dark:text-white group-hover:text-blueprint-blue transition-colors">#{topic}</span>
                                        <span class="text-xs text-slate-400 dark:text-slate-500 group-hover:text-blueprint-blue transition-colors">{count}</span>
                                    </div>
                                    <div class="h-[1px] w-full bg-slate-200 dark:bg-slate-700 group-hover:bg-blueprint-blue/50 transition-colors"></div>
                                </a>
                            ))}
                        </div>
                    </div>
                ))}
              </div>
          </div>
      </div>
      <SiteFooter />
  </main>
</Layout>

<style is:global>
    .topic-btn {
        background-color: rgb(241 245 249);
        border: 1px solid rgb(226 232 240);
        color: rgb(15 23 42);
        text-decoration: none;
    }
    .topic-btn:hover {
        background-color: rgb(248 250 252);
        border-color: rgb(15 23 42);
        color: rgb(15 23 42);
    }
    .dark .topic-btn {
        background-color: transparent;
        border-color: rgb(71 85 105);
        color: rgb(203 213 225);
    }
    .dark .topic-btn:hover {
        background-color: rgb(51 65 85);
        border-color: rgb(203 213 225);
        color: rgb(203 213 225);
    }
</style>
