---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import SiteFooter from "../../components/SiteFooter.astro";
import { stages as themeStages, getStageData } from "../../lib/theme";

export async function getStaticPaths() {
    const allNotes = await getCollection("notes");
    const topics = new Set<string>();
    allNotes.forEach((note) => {
        note.data.tags.forEach((tag) => topics.add(tag));
    });
    return Array.from(topics).map((topic) => ({
        params: { topic },
    }));
}

const { topic } = Astro.params;

const allNotes = await getCollection("notes");
const filteredNotes = allNotes.filter((note) => note.data.tags.includes(topic!));

const sortedNotes = filteredNotes.sort(
    (a, b) =>
        (b.data.publishedDate?.getTime() || 0) -
        (a.data.publishedDate?.getTime() || 0),
);

const latestDate = sortedNotes.length > 0
    ? sortedNotes[0].data.publishedDate?.toLocaleDateString("en-US", { month: 'short', year: 'numeric' })
    : "N/A";

// Group notes by stage
const groupedByStage = {
    evergreen: sortedNotes.filter(n => n.data.stage === 'evergreen'),
    sprout: sortedNotes.filter(n => n.data.stage === 'sprout'),
    seed: sortedNotes.filter(n => n.data.stage === 'seed')
};

const stages = ['evergreen', 'sprout', 'seed'].map(id => {
    const data = themeStages[id as keyof typeof themeStages];
    return {
        id,
        label: data.label + 's', // Pluralize for this page
        icon: data.icon,
        color: data.colors.accent,
        bgColor: data.colors.bgAccent,
        dotColor: data.colors.dotShadow
    };
});
---

<Layout
    title={`Topic: ${topic} | Knowledge Path`}
    description={`Explore all cultivated notes and ideas regarding ${topic}.`}
    type="website"
>
    <main class="w-full max-w-[1280px] mx-auto px-6 py-12" data-pagefind-ignore>
        <!-- Header Section -->
        <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 mb-16">
            <div>
                <a class="inline-flex items-center gap-2 text-xs font-bold text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors mb-6 uppercase tracking-widest group" href="/">
                    <span class="material-symbols-outlined text-base group-hover:-translate-x-1 transition-transform">arrow_back</span>
                    RETURN TO GARDEN
                </a>
                <h1 class="text-5xl md:text-7xl font-bold text-navy-900 dark:text-white mb-4 tracking-tight" style="font-family: 'Space Grotesk', sans-serif;">
                    Topic: <span class="text-blue-600 dark:text-blue-400">{topic}</span>
                </h1>
                <div class="flex items-center gap-4 text-slate-500 dark:text-slate-400">
                    <span class="text-sm font-mono bg-slate-100 dark:bg-slate-800 px-2 py-0.5 rounded">Notes: {sortedNotes.length.toString().padStart(3, '0')}</span>
                    <span class="text-sm font-mono bg-slate-100 dark:bg-slate-800 px-2 py-0.5 rounded">Updated: {latestDate}</span>
                </div>
            </div>
        </div>

        <!-- Knowledge Path -->
        <div class="relative">
            <!-- Central Line -->
            <div class="knowledge-path-line hidden md:block"></div>

            <div class="space-y-20">
                {stages.map((stage) => {
                    const notes = groupedByStage[stage.id as keyof typeof groupedByStage];
                    if (notes.length === 0) return null;

                    return (
                        <section>
                            <div class="flex items-center gap-4 mb-10 sticky top-20 bg-background-light dark:bg-background-dark py-4 z-20">
                                <div class={`w-10 h-10 rounded-full ${stage.bgColor} flex items-center justify-center`}>
                                    <span class={`material-symbols-outlined ${stage.color} text-xl`}>{stage.icon}</span>
                                </div>
                                <h2 class="text-2xl font-bold text-navy-900 dark:text-white">{stage.label}</h2>
                                <div class="h-px flex-grow bg-slate-200 dark:bg-slate-800"></div>
                            </div>

                            <div class="space-y-8 md:pl-16 relative">
                                {notes.map((note) => (
                                    <article class="group bg-white dark:bg-navy-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-6 md:p-8 transition-all hover:shadow-xl hover:-translate-y-1 relative">
                                        <!-- Connection Dot -->
                                        <div class:list={["topic-dot hidden md:block shadow-[0_0_0_4px_rgba(0,0,0,0.05)]", stage.dotColor]}></div>

                                        <div class="flex gap-8 flex-col md:flex-row">
                                            {note.data.cover && (
                                                <div class="w-full md:w-64 h-44 flex-shrink-0 bg-slate-100 dark:bg-slate-900 rounded-xl overflow-hidden shadow-inner border border-slate-100 dark:border-slate-800">
                                                    <Image
                                                        src={note.data.cover}
                                                        alt={note.data.title}
                                                        class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700 ease-out scale-105 group-hover:scale-100"
                                                    />
                                                </div>
                                            )}

                                            <div class="flex-grow flex flex-col">
                                                <div class="flex justify-between items-start mb-3">
                                                    <span class:list={["text-xs font-bold uppercase tracking-widest", getStageData(note.data.stage).colors.text]}>
                                                        {note.data.stage}
                                                    </span>
                                                    <time class="text-slate-400 text-xs font-mono">
                                                        {note.data.publishedDate?.toLocaleDateString("en-US", { month: 'short', year: 'numeric' })}
                                                    </time>
                                                </div>

                                                <h3 class="text-2xl md:text-3xl font-bold mb-4 text-navy-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors leading-tight">
                                                    <a href={`/notes/${note.id.replace('.md', '')}`} class="after:absolute after:inset-0">
                                                        {note.data.title}
                                                    </a>
                                                </h3>

                                                {note.data.summary && (
                                                    <p class="text-slate-600 dark:text-slate-400 text-base leading-relaxed mb-6 line-clamp-3 font-serif italic">
                                                        "{note.data.summary}"
                                                    </p>
                                                )}

                                                <div class="mt-auto flex flex-wrap gap-2">
                                                    {note.data.tags.map(t => (
                                                        <span class="px-2.5 py-1 bg-slate-50 dark:bg-slate-900 border border-slate-100 dark:border-slate-800 rounded-lg text-[10px] font-bold text-slate-500 dark:text-slate-400 uppercase tracking-wider group-hover:border-blue-200 dark:group-hover:border-blue-900/50 transition-colors">
                                                            #{t}
                                                        </span>
                                                    ))}
                                                </div>
                                            </div>
                                        </div>
                                    </article>
                                ))}
                            </div>
                        </section>
                    );
                })}
            </div>
        </div>
    </main>
    <SiteFooter />
</Layout>

<style is:global>
    @reference "../../styles/global.css";

    .knowledge-path-line {
        position: absolute;
        left: 32px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, transparent, var(--color-slate-200), transparent);
        opacity: 0.5;
    }

    .dark .knowledge-path-line {
        background: linear-gradient(to bottom, transparent, var(--color-slate-800), transparent);
    }

    .topic-dot {
        position: absolute;
        left: -37px;
        top: 3.5rem;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        z-index: 10;
    }
</style>
