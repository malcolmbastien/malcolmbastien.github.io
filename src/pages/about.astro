---
import Layout from "../layouts/Layout.astro";
import BackToGarden from "../components/Navigation/BackToGarden.astro";
import TableOfContents from "../components/Navigation/TableOfContents.astro";
import SiteFooter from "../components/SiteFooter.astro";
import { Image } from "astro:assets";
import portrait from "../assets/malcolm_portrait.jpg";

const tocSections = [
    { id: "intro", text: "About" },
    { id: "what-i-do", text: "What I Do" },
    { id: "delivery-highlights", text: "Delivery Highlights" },
    { id: "experience", text: "Experience" },
    { id: "published-tools", text: "Published Tools" },
    { id: "skills", text: "Skills" },
    { id: "certifications", text: "Certifications" },
    { id: "expertise", text: "Expertise" },
    { id: "testimonials", text: "Testimonials" },
    { id: "education", text: "Education" }
];
---

<Layout
    title="Malcolm Bastien | Technical Program Manager & Agile Coach"
    description="Senior Lean-Agile Delivery and Transformation Coach with over 8 years of experience supporting high-impact initiatives in Pharmacy, FinTech and Payments. I help organizations navigate complex Agile transformations and enable teams to deliver high-impact programs."
    type="website"
>
    <main class="max-w-7xl mx-auto px-6 py-12 grid grid-cols-1 lg:grid-cols-12 gap-12" data-pagefind-ignore>
        <!-- Sidebar Navigation -->
        <aside class="hidden lg:block lg:col-span-3 sticky top-24 h-fit">
            <TableOfContents sectionIds={tocSections} title="On this page" />
            <div class="mt-8">
                <BackToGarden />
            </div>
        </aside>

        <!-- Main Content -->
        <div class="lg:col-span-9" data-pagefind-body>
            <!-- Intro Section -->
            <section class="mb-16 scroll-mt-24" id="intro">
                <div class="flex flex-col md:flex-row gap-16 items-start mb-12">
                    <div class="w-48 h-48 md:w-64 md:h-64 rounded-2xl overflow-hidden bg-slate-200 shrink-0 shadow-xl ring-8 ring-slate-50 dark:ring-slate-900">
                         <Image
                            src={portrait}
                            alt="Malcolm Bastien Professional Portrait"
                            widths={[240, 480, 640, portrait.width]}
                            sizes="(max-width: 640px) 192px, 256px"
                            loading="eager"
                            class="w-full h-full object-cover object-top"
                        />
                    </div>
                    <div class="flex-1 pt-2">
                        <h1 class="text-4xl md:text-5xl font-bold text-slate-900 dark:text-white mb-4 tracking-tight">Malcolm Bastien</h1>
                        <p class="text-lg md:text-xl text-slate-600 dark:text-slate-400 leading-relaxed mb-8 max-w-xl">
                            <span class="text-primary font-semibold italic">Senior Lean-Agile Delivery and Transformation Coach</span> with over 8 years of experience supporting high-impact initiatives in Pharmacy, FinTech and Payments.
                        </p>
                        <div class="flex gap-3">
                            <a
                                href="https://github.com/malcolmbastien"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="w-9 h-9 flex items-center justify-center rounded-full bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-400 hover:text-black dark:hover:text-white transition-colors"
                                aria-label="GitHub"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
