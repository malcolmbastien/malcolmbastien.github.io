---
import Layout from "../layouts/Layout.astro";
import SiteFooter from "../components/SiteFooter.astro";

const title = "Page Not Found - 404";
const description = "The page you're looking for doesn't exist. Let's get you back to the garden.";
---

<Layout title={title} description={description}>
    <main class="max-w-4xl mx-auto p-4 md:p-8">

        <div class="text-center py-20">
            <div class="mb-12">
                <div class="metadata text-9xl mb-6 opacity-20 font-mono">404</div>
                <h1 class="text-6xl font-serif font-black text-terminal-dark dark:text-white mb-6 tracking-tight uppercase">
                    Page Not Found
                </h1>
                <p class="text-xl font-sans text-slate-600 dark:text-slate-400 mb-12 max-w-2xl mx-auto italic">
                    The page you're looking for doesn't exist or may have been moved.
                </p>
            </div>

            <div class="card-blueprint p-12 mb-12 bg-white">
                <div class="flow-line"></div>
                <h2 class="text-3xl font-serif font-bold text-terminal-dark dark:text-white mb-10 tracking-tight uppercase">
                    What would you like to do?
                </h2>

                <div class="grid md:grid-cols-2 gap-12 text-left">
                    <div>
                        <h3 class="metadata text-xs font-bold text-slate-400 dark:text-slate-500 mb-4 tracking-widest">
                            Go Home
                        </h3>
                        <p class="font-sans text-sm text-slate-600 dark:text-slate-400 mb-6 leading-relaxed">
                            Return to the homepage and explore the latest content.
                        </p>
                        <a
                            href="/"
                            class="inline-flex items-center gap-3 bg-terminal-dark text-white px-8 py-3 font-mono text-xs font-bold uppercase tracking-widest hover:bg-blueprint-blue transition-all shadow-[4px_4px_0_0_#f1f5f9] hover:shadow-[6px_6px_0_0_#0055FF] active:shadow-none active:translate-x-1 active:translate-y-1"
                        >
                            Go Home
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                        </a>
                    </div>

                    <div>
                        <h3 class="metadata text-xs font-bold text-slate-400 mb-4 tracking-widest">
                            Search the Site
                        </h3>
                        <p class="font-sans text-sm text-slate-600 mb-6 leading-relaxed">
                            Use the search function to find what you're looking for.
                        </p>
                        <a
                            href="/search"
                            class="inline-flex items-center gap-3 bg-blueprint-blue text-white px-8 py-3 font-mono text-xs font-bold uppercase tracking-widest hover:opacity-90 transition-all shadow-[4px_4px_0_0_#bfdbfe] hover:shadow-[6px_6px_0_0_#0055FF] active:shadow-none active:translate-x-1 active:translate-y-1"
                        >
                            Search Site
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <SiteFooter />
    </main>
</Layout>
